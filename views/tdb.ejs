<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title><%= title %>></title>
  </head>
  <body>
    <h1>Tableau de bord</h1>
    <br />
    <br />

    <div class="container">
      <div class="row">
        <div class="col">
          <a href="/users/add"
            ><button class="btn btn-secondary">
              Ajouter un utilisateur
            </button></a
          >
        </div>
        <div class="col">
          <a href="/catways/add"
            ><button class="btn btn-secondary">Ajouter un catway</button></a
          >
        </div>
      </div>
    </div>
    <br />
    <br />
    <h2>Voici la liste des utilisateurs</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Utilisateur</th>
          <th scope="col">Email</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%users.forEach((user)=> {%>
        <tr>
          <th scope="row"><%= user.name%> <%= user.firstname%></th>
          <td><%= user.email%></td>
          <td class="d-flex">
            <div>
              <form method="GET" action="/users/<%= user._id %>">
                <button class="btn btn-secondary">Voir détails</button>
              </form>
            </div>
            <div>
              <form
                method="POST"
                action="/users/<%= user._id %>?_method=DELETE"
              >
                <button class="btn btn-danger">Supprimer</button>
              </form>
            </div>
            <div>
              <a href="/users/update/<%= user.id %>"
                ><button class="btn btn-primary">
                  Modifier l'utilisateur
                </button></a
              >
            </div>
          </td>
        </tr>
        <% })%>
      </tbody>
    </table>
    <br />
    <br />

    <h2>Voici la liste des catways</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">CatwayNumber</th>
          <th scope="col">Type</th>
          <th scope="col">CatwayState</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%catways.forEach((catway)=> {%>
        <tr>
          <th scope="row"><%= catway.catwayNumber%></th>
          <td><%= catway.type%></td>
          <td><%= catway.catwayState%></td>
          <td class="d-flex">
            <div>
              <form method="GET" action="/catways/<%= catway._id %>">
                <button class="btn btn-secondary">Voir détails</button>
              </form>
            </div>
            <div>
              <form
                method="POST"
                action="/catways/<%= catway._id %>?_method=DELETE"
              >
                <button class="btn btn-danger">Supprimer</button>
              </form>
            </div>
            <div>
              <a href="/catways/update/<%= catway.id %>"
                ><button class="btn btn-primary">Modifier le catway</button></a
              >
            </div>
          </td>
        </tr>
        <% })%>
      </tbody>
    </table>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
